<?xml version="1.0" encoding="utf-8"?>

<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/CityListFragment">

    <fragment
        android:id="@+id/CityListFragment"
        android:name="com.example.listmaker.ui.CityListFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_city_list">
        <action
            android:id="@+id/action_cityListFragment_to_LandmarkListFragment"
            app:destination="@id/LandmarkListFragment" />
        <action
            android:id="@+id/action_cityListFragment_to_CityAddFragment"
            app:destination="@id/CityAddFragment"/>
        <argument
            android:name="City_id"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/LandmarkListFragment"
        android:name="com.example.listmaker.ui.LandmarkListFragment"
        android:label="@string/item_detail_fragment_title"
        tools:layout="@layout/fragment_list_landmark">
        <argument
            android:name="Landmark_id"
            app:argType="integer" />
        <action
            android:id="@+id/action_LandmarkListFragment_to_LandmarkAddFragment"
            app:destination="@id/LandmarkAddFragment" />
        <action
            android:id="@+id/action_LandmarkListFragment_to_CityListFragment"
            app:destination="@id/CityListFragment" />


    </fragment>
    <fragment
        android:id="@+id/CityAddFragment"
        android:name="com.example.listmaker.ui.CityAddFragment"
        android:label="{title}"
        tools:layout="@layout/fragment_add_city">
        <argument
            android:name="title"
            app:argType="string" />
        <argument
            android:name="City_id"
            android:defaultValue="-1"
            app:argType="integer" />
        <action
            android:id="@+id/action_CityAddFragment_to_CityListFragment"
            app:destination="@id/CityListFragment"
            app:popUpTo="@id/CityListFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/LandmarkAddFragment"
        android:name="com.example.listmaker.ui.LandmarkAddFragment"
        android:label="{title}"
        tools:layout="@layout/fragment_add_landmark">
        <argument
            android:name="title"
            app:argType="string" />
        <argument
            android:name="Landmark_id"
            android:defaultValue="-1"
            app:argType="integer" />
        <action
            android:id="@+id/action_LandmarkAddFragment_to_LandmarkListFragment"
            app:destination="@id/LandmarkListFragment"
            app:popUpTo="@id/LandmarkListFragment"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>
